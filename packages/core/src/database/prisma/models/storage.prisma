model StorageProviderConfig {
  id        String   @id @default(cuid(2))
  name      String   @unique
  provider  String
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storageUnits StorageUnit[]

  @@index([provider])
}

model StorageUnit {
  id        String   @id @default(cuid(2))
  name      String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storageProviderConfigId String
  storageProviderConfig   StorageProviderConfig @relation(fields: [storageProviderConfigId], references: [id], onDelete: Cascade)
  assets                  Asset[]

  @@unique([storageProviderConfigId, name])
  @@index([isDefault])
  @@index([storageProviderConfigId])
}
